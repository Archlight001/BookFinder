<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Book Finder</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css">
    <script src="main.js"></script>
</head>
<body>
    <div>
    <form action="/" method="POST">
        <input type="text" placeholder="Enter name of book here" name="bookName" value="<%= SearchTitle %>" id="bookName" required/>
        <input type="text" placeholder="Author" name="bookAuthor" value="<%= SearchAuthor %>" />
        <input type="submit" value="Search">
    </form>
    </div>

    <% if(Set === "Set"){ %>
    <%  Book.forEach(function(book){ %>
        
        <div class="searchresults">
        <img src="<%= book.Image %>" alt="No Image">
        <div class="subinfo">
            <h3 id="size0"><a href="<%= book.InfoLink %>"> <%= book.Title %></a></h3> 
            <p id="size1"><%= book.Description %></p>
            <p id="size2"><%= book.Author %></p>
            <p id="size3"><%= book.Publisher %></p>
        </div>
    
    </div>
    <% }); %>
    <% } %>
    
    
    
</body>
</html>